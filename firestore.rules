rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isMentor() {
      return request.auth.token.email == 'marcio.portes@me.com';
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId) || isMentor();
    }
    
    // Currencies (read-only for all, write for mentor)
    match /currencies/{currencyId} {
      allow read: if isAuthenticated();
      allow write: if isMentor();
    }
    
    // Brokers (read-only for all, write for mentor)
    match /brokers/{brokerId} {
      allow read: if isAuthenticated();
      allow write: if isMentor();
    }
    
    // Tickers (read-only for all, write for mentor)
    match /tickers/{tickerId} {
      allow read: if isAuthenticated();
      allow write: if isMentor();
    }
    
    // Exchanges (read-only for all, write for mentor)
    match /exchanges/{exchangeId} {
      allow read: if isAuthenticated();
      allow write: if isMentor();
    }
    
    // Setups (global setups read for all, students can create personal setups)
    match /setups/{setupId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isMentor() || 
        (resource.data.createdBy == request.auth.uid && resource.data.isGlobal == false);
    }
    
    // Emotions (read-only for all, write for mentor)
    match /emotions/{emotionId} {
      allow read: if isAuthenticated();
      allow write: if isMentor();
    }
    
    // Accounts (students manage their own, mentor can read all)
    match /accounts/{accountId} {
      allow read: if isAuthenticated() && 
        (resource.data.studentId == request.auth.uid || isMentor());
      allow create: if isAuthenticated() && 
        request.resource.data.studentId == request.auth.uid;
      allow update, delete: if isAuthenticated() && 
        (resource.data.studentId == request.auth.uid || isMentor());
    }
    
    // Movements (students manage their own, mentor can read all)
    match /movements/{movementId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && 
        (resource.data.studentId == request.auth.uid || isMentor());
    }
    
    // Plans (students manage their own, mentor can read/write all)
    match /plans/{planId} {
      allow read: if isAuthenticated() && 
        (resource.data.studentId == request.auth.uid || isMentor());
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && 
        (resource.data.studentId == request.auth.uid || isMentor());
    }
    
    // Trades (students create their own, mentor can read/update all)
    match /trades/{tradeId} {
      allow read: if isAuthenticated() && 
        (resource.data.studentId == request.auth.uid || isMentor());
      allow create: if isAuthenticated() && 
        request.resource.data.studentId == request.auth.uid;
      allow update: if isAuthenticated() && 
        (resource.data.studentId == request.auth.uid || isMentor());
      allow delete: if isAuthenticated() && 
        (resource.data.studentId == request.auth.uid || isMentor());
    }
    
    // Notifications (users read their own, system creates)
    match /notifications/{notificationId} {
      allow read: if isAuthenticated() && 
        (resource.data.targetUserId == request.auth.uid || 
         resource.data.targetRole == 'mentor' && isMentor() ||
         resource.data.targetRole == 'student' && !isMentor());
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && 
        (resource.data.targetUserId == request.auth.uid || isMentor());
      allow delete: if isMentor();
    }
  }
}
